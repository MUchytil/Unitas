@using Unitas.Data;
@inject ApplicationDbContext appDbContext
<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Hello, @GetUser(context.User.Identity.Name).FirstName!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <NavLink class="nav-link" href="Identity/Account/Register">
            <span class="oi oi-plus" aria-hidden="true"></span> Register
        </NavLink>
        <NavLink class="nav-link" href="Identity/Account/Login">
            <span class="oi oi-person" aria-hidden="true"></span> Log in
        </NavLink>
    </NotAuthorized>
</AuthorizeView>

@code{
    public ApplicationUser GetUser(string id) => appDbContext.Users.ToList().Where(x => id == x.Email).Single();
}
